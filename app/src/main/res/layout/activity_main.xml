<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.moyersoftware.contender.menu.MainActivity"
    tools:targetApi="lollipop">

    <TextView
        android:id="@+id/textView3"
        fontPath="fonts/gothic.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_gray"
        android:elevation="4dp"
        android:includeFontPadding="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/app_title1"
        android:textColor="@color/color_green"
        android:textSize="20sp"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/textView4"
        fontPath="fonts/gothic.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_gray"
        android:elevation="4dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/app_title2"
        android:textColor="@color/color_lightgray"
        android:textSize="12sp"
        tools:ignore="MissingPrefix" />

    <android.support.design.widget.TabLayout
        android:id="@+id/main_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_gray"
        android:elevation="4dp"
        app:tabIndicatorColor="@color/color_green" />

    <android.support.v4.view.ViewPager
        android:id="@+id/main_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
