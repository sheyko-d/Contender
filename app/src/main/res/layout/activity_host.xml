<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.moyersoftware.contender.menu.MainActivity"
    tools:ignore="MissingPrefix"
    tools:targetApi="lollipop">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimary"
        android:contentDescription="@null"
        android:elevation="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingTop="16dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@null"
            android:onClick="onBackButtonClicked"
            android:src="@drawable/back" />

        <TextView
            fontPath="fonts/segoe_ui_bold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="@string/games_host"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                fontPath="fonts/segoe_ui_medium.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/host_game_info_title"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/background_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        fontPath="fonts/segoe_ui_medium.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="12dp"
                        android:text="Game ID"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/host_id_txt"
                        fontPath="fonts/segoe_ui.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        tools:text="54897678" />

                    <TextView
                        fontPath="fonts/segoe_ui_medium.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="18dp"
                        android:text="Game Name"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        fontPath="fonts/segoe_ui.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="2dp"
                        android:text="Name your game so players know it's yours"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/host_name_edit_txt"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="-8dp"
                        android:inputType="textCapWords" />

                    <TextView
                        fontPath="fonts/segoe_ui_medium.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="12dp"
                        android:text="Game Image"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/host_game_img"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/placeholder" />

                            <ProgressBar
                                android:id="@+id/host_img_progress_bar"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:indeterminateTint="@android:color/white"
                                android:visibility="gone" />
                        </FrameLayout>

                        <Button
                            fontPath="fonts/segoe_ui_bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:onClick="onImageButtonClicked"
                            android:text="Pick from gallery"
                            android:textSize="14sp"
                            android:theme="@style/Button" />
                    </LinearLayout>

                    <TextView
                        fontPath="fonts/segoe_ui_medium.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="14dp"
                        android:text="Game Password"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        fontPath="fonts/segoe_ui.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="2dp"
                        android:text="Enter at least 4 numbers"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/host_password_edit_txt"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="-8dp"
                        android:inputType="number"
                        tools:ignore="TextFields" />

                    <TextView
                        fontPath="fonts/segoe_ui_medium.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="12dp"
                        android:text="NFL Game"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="17dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/host_game_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:checked="true" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/background_white"
                            android:clickable="true"
                            android:elevation="1dp"
                            android:foreground="?selectableItemBackground"
                            android:onClick="onChooseGameClicked">

                            <TextView
                                android:id="@+id/host_event_txt"
                                fontPath="fonts/segoe_ui_medium.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="12dp"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingTop="12dp"
                                android:text="Choose an upcoming game"
                                android:textColor="@color/secondary_text"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="16dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="1dp"
                                android:contentDescription="@null"
                                android:src="@drawable/spinner_arrow" />
                        </FrameLayout>
                    </LinearLayout>

                    <TextView
                        fontPath="fonts/segoe_ui.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/or"
                        android:textAllCaps="true"
                        android:textColor="@color/secondary_text"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/host_custom_radio_btn"
                        fontPath="fonts/segoe_ui_medium.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="@string/custom_game_board"
                        android:textColor="@color/secondary_text"
                        android:textSize="16sp" />

                    <TextView
                        fontPath="fonts/segoe_ui_medium.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Points Per Square"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        fontPath="fonts/segoe_ui.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="2dp"
                        android:text="How much will each square cost?"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/host_square_price_edit_txt"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="-8dp"
                        android:inputType="number"
                        android:maxLength="3"
                        android:text="@string/host_default_square_price" />

                    <TextView
                        fontPath="fonts/segoe_ui_medium.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:text="Points per Quarter"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        fontPath="fonts/segoe_ui.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="2dp"
                        android:text="How many points will each quarter be worth?"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/background_white_border"
                        android:elevation="1dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                fontPath="fonts/segoe_ui.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Q1"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/host_quarter1_price_edit_txt"
                                fontPath="fonts/segoe_ui_medium.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="2dp"
                                android:background="@null"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="20"
                                android:textColor="@color/primary_text"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                fontPath="fonts/segoe_ui.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Q2"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/host_quarter2_price_edit_txt"
                                fontPath="fonts/segoe_ui_medium.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="2dp"
                                android:background="@null"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="20"
                                android:textColor="@color/primary_text"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                fontPath="fonts/segoe_ui.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Q3"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/host_quarter3_price_edit_txt"
                                fontPath="fonts/segoe_ui_medium.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="2dp"
                                android:background="@null"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="20"
                                android:textColor="@color/primary_text"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                fontPath="fonts/segoe_ui.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Final"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/host_final_price_edit_txt"
                                fontPath="fonts/segoe_ui_medium.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="2dp"
                                android:background="@null"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="40"
                                android:textColor="@color/primary_text"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                fontPath="fonts/segoe_ui.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Total"
                                android:textColor="@color/green"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/host_total_price_txt"
                                fontPath="fonts/segoe_ui_medium.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="2dp"
                                android:background="@null"
                                android:gravity="center"
                                android:text="100"
                                android:textColor="@color/green"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        fontPath="fonts/segoe_ui_medium.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="14dp"
                        android:text="Rules"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        fontPath="fonts/segoe_ui.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="2dp"
                        android:text="Enter any rules you want"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/host_rules_edit_txt"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/background_white_border"
                        android:elevation="1dp"
                        android:gravity="center_vertical"
                        android:inputType="textCapSentences"
                        android:paddingBottom="12dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="10dp"
                        tools:ignore="TextFields" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textView2"
                fontPath="fonts/segoe_ui_medium.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/host_game_options"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/background_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        fontPath="fonts/segoe_ui_medium.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="12dp"
                        android:text="Squares Limit"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        fontPath="fonts/segoe_ui.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="2dp"
                        android:text="What is the max number of squares a player is allowed to choose?"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/host_square_limit_edit_txt"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="-8dp"
                        android:hint="@string/host_default_square_limit"
                        android:inputType="number"
                        android:max="3"
                        android:text="@string/host_default_square_limit"
                        android:textColorHint="@color/secondary_text" />

                    <TextView
                        fontPath="fonts/segoe_ui_medium.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="14dp"
                        android:text="Allow Incomplete Boards"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        fontPath="fonts/segoe_ui.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="2dp"
                        android:text="If a board is not 100% filled in, allow the game to be played? Points that are not won due to the board not being filled will be roller over to the FINAL score winnings."
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:checkedButton="@+id/host_allow_radio_btn"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/host_allow_radio_btn"
                            fontPath="fonts/segoe_ui_medium.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Allow Incomplete"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/host_dont_allow_radio_btn"
                            fontPath="fonts/segoe_ui_medium.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:text="Don't Allow"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/textView"
                        fontPath="fonts/segoe_ui_medium.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Have a secret code?"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        fontPath="fonts/segoe_ui.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="2dp"
                        android:text="Enter it here to get a free game!"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/host_code_edit_txt"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="-8dp"
                        android:inputType="textNoSuggestions|textCapCharacters" />

                    <Button
                        fontPath="fonts/segoe_ui_bold.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="16dp"
                        android:onClick="onCreateButtonClicked"
                        android:text="@string/host_create"
                        android:theme="@style/Button" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
