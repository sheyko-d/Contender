<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moyersoftware.contender.menu.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="16dp"
            android:paddingRight="15dp"
            android:text="@string/app_title1"
            android:textColor="@color/theme_green"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="16dp"
            android:paddingRight="15dp"
            android:text="@string/app_title2"
            android:textColor="@color/theme_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/theme_black"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@null"
            android:onClick="onBackButtonClicked"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/didact_gothic"
            android:includeFontPadding="false"
            android:text="@string/games_host"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:scrollbarStyle="outsideOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/didact_gothic"
                android:text="@string/host_game_info_title"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/background_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/didact_gothic"
                        android:text="Game ID"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/host_id_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/didact_gothic"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        tools:text="54897678" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/didact_gothic"
                        android:text="Game Name"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/didact_gothic"
                        android:text="Name your game so players know it's yours"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/host_name_edit_txt"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="-8dp"
                        android:layout_marginRight="14dp"
                        android:fontFamily="@font/didact_gothic"
                        android:inputType="textCapWords" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/didact_gothic"
                        android:text="Game Password"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/didact_gothic"
                        android:text="Enter at least 4 numbers"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/host_password_edit_txt"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="-8dp"
                        android:layout_marginRight="14dp"
                        android:fontFamily="@font/didact_gothic"
                        android:inputType="number"
                        tools:ignore="TextFields" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/didact_gothic"
                        android:text="NFL Game"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="17dp"
                        android:layout_marginRight="17dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/background_white"
                            android:clickable="true"
                            android:elevation="1dp"
                            android:foreground="?selectableItemBackground"
                            android:onClick="onChooseGameClicked">

                            <TextView
                                android:id="@+id/host_event_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/didact_gothic"
                                android:paddingLeft="16dp"
                                android:paddingTop="12dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="12dp"
                                android:text="Choose an upcoming game"
                                android:textColor="@color/secondary_text"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginEnd="16dp"
                                android:contentDescription="@null"
                                android:src="@drawable/spinner_arrow" />
                        </FrameLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/didact_gothic"
                        android:text="Points Per Square"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        fontPath="fonts/gothic.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="16dp"
                        android:text="How much will each square cost?"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/host_square_price_edit_txt"
                        style="@style/EditText"
                        fontPath="fonts/gothic.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="-8dp"
                        android:layout_marginRight="14dp"
                        android:inputType="number"
                        android:maxLength="3"
                        android:text="@string/host_default_square_price" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/didact_gothic"
                        android:text="Points per Quarter"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        fontPath="fonts/gothic.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="16dp"
                        android:text="How many points will each quarter be worth?"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/background_white_border"
                        android:elevation="1dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                fontPath="fonts/gothic.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Q1"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/host_quarter1_price_edit_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="8dp"
                                android:background="@null"
                                android:fontFamily="@font/didact_gothic"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="20"
                                android:textColor="@color/primary_text"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                fontPath="fonts/gothic.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Q2"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/host_quarter2_price_edit_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="8dp"
                                android:background="@null"
                                android:fontFamily="@font/didact_gothic"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="20"
                                android:textColor="@color/primary_text"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                fontPath="fonts/gothic.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Q3"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/host_quarter3_price_edit_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="8dp"
                                android:background="@null"
                                android:fontFamily="@font/didact_gothic"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="20"
                                android:textColor="@color/primary_text"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                fontPath="fonts/gothic.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Final"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/host_final_price_edit_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="8dp"
                                android:background="@null"
                                android:fontFamily="@font/didact_gothic"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="40"
                                android:textColor="@color/primary_text"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                fontPath="fonts/gothic.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Total"
                                android:textColor="@color/green"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/host_total_price_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="8dp"
                                android:background="@null"
                                android:fontFamily="@font/didact_gothic"
                                android:gravity="center"
                                android:text="100"
                                android:textColor="@color/green"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/didact_gothic"
                        android:text="Rules"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        fontPath="fonts/gothic.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="16dp"
                        android:text="Enter any rules you want"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/host_rules_edit_txt"
                        style="@style/EditText"
                        fontPath="fonts/gothic.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/background_white_border"
                        android:elevation="1dp"
                        android:gravity="center_vertical"
                        android:inputType="textCapSentences"
                        android:paddingLeft="16dp"
                        android:paddingTop="10dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="12dp"
                        tools:ignore="TextFields" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/didact_gothic"
                android:text="@string/host_game_options"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/background_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/didact_gothic"
                        android:text="Squares Limit"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        fontPath="fonts/gothic.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="16dp"
                        android:text="What is the max number of squares a player is allowed to choose?"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/host_square_limit_edit_txt"
                        style="@style/EditText"
                        fontPath="fonts/gothic.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="-8dp"
                        android:layout_marginRight="14dp"
                        android:hint="@string/host_default_square_limit"
                        android:inputType="number"
                        android:max="3"
                        android:text="@string/host_default_square_limit"
                        android:textColorHint="@color/secondary_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/didact_gothic"
                        android:text="Allow Incomplete Boards"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        fontPath="fonts/gothic.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="16dp"
                        android:text="If a board is not 100% filled in, allow the game to be played? Points that are not won due to the board not being filled will be rolled over to the FINAL score winnings."
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="10dp"
                        android:checkedButton="@+id/host_allow_radio_btn"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/host_allow_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Allow Incomplete"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/host_dont_allow_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Don't Allow"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp" />
                    </RadioGroup>

                    <Button
                        fontPath="fonts/gothic.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginBottom="16dp"
                        android:onClick="onCreateButtonClicked"
                        android:text="@string/host_create"
                        android:theme="@style/Button" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
