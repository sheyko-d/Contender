<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/game_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                android:orientation="horizontal"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/game_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="-1dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/game_name_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-2dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/raleway_semibold"
                            android:maxLines="1"
                            android:textColor="@color/color_green"
                            android:textSize="16sp"
                            tools:text="Big Day" />

                        <TextView
                            android:id="@+id/game_score_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/raleway_light"
                            android:textColor="@color/secondary_text"
                            android:textSize="11sp"
                            tools:text="89/100" />
                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/game_details_layout"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="center|right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/game_teams_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="@font/raleway_light"
                            android:textColor="@color/green"
                            android:textSize="14sp"
                            tools:text="20 points" />

                        <TextView
                            android:id="@+id/game_time_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/raleway_light"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="5dp"
                            android:maxLines="1"
                            android:textColor="@color/green"
                            android:textSize="11sp"
                            tools:text="09 Nov 4:30 PM EST" />

                        <FrameLayout
                            android:id="@+id/game_final_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/game_final_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/red"
                                android:fontFamily="@font/raleway"
                                android:includeFontPadding="false"
                                android:paddingLeft="3dp"
                                android:paddingTop="1dp"
                                android:paddingRight="3dp"
                                android:paddingBottom="1.5dp"
                                android:text="FINAL"
                                android:textColor="@android:color/white"
                                android:textSize="11sp"
                                tools:ignore="SmallSp" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/game_layout"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/invite_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/game_invite_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:fontFamily="@font/raleway_light"
                        android:textColor="@color/secondary_text"
                        android:textSize="9sp"
                        tools:text="JOHN DOE has invited you" />

                    <TextView
                        android:id="@+id/game_join_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="Join game?"
                        android:textAllCaps="true"
                        android:textColor="@color/green"
                        android:textSize="11sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/accept"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@null"
                    android:padding="2dp"
                    android:src="@drawable/accept"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/reject"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@null"
                    android:padding="2dp"
                    android:src="@drawable/reject"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>